.headerTab{
  display: flex;
  justify-content: space-around;
  padding-top:10px;
  background:#FFFCF0;
}
.borderBottom{
  width:30px;
  height:3px;
  background: #FFC200;
  margin:0 auto;
  margin-top:10px;
}
.mainContent{
  width:100%;
  height:100%;
  box-shadow: 10px 0px 15px #888888;
  text-align: center;
  line-height:30px;
}
.btn{
  width:150px;
  outline: none;
  height:40px;
  border:1px solid #FFC200;
  color:#FFC200;
  background: none;
  line-height: 40px;
}
.active{
  color:#FFC200;
}



.hot{
  width:96%;
  height:auto;
  background: #fff;
  margin:0 auto;
  margin-top:20px;
  border-radius:10px;
  overflow:hidden;
  padding-bottom:10px

}
.hot .leftimg{
  float:left;
  margin-left:16px;
}
.hot .righttxt{
  float:left;
  width:50%;
  margin-left:10px;
  font-size:14px;
}
.righttxt text{
  display:block
}
